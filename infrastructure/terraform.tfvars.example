# =============================================================================
# HZ-Navigator Terraform Variables - Production Example
# =============================================================================
# Copy this file to terraform.tfvars and update values for your environment.
# Do NOT commit terraform.tfvars to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# General Configuration
# -----------------------------------------------------------------------------

aws_region  = "us-east-1"
environment = "production"
domain_name = "hz-navigator.example.com"
frontend_subdomain = "app"

# -----------------------------------------------------------------------------
# VPC Configuration
# -----------------------------------------------------------------------------

vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# -----------------------------------------------------------------------------
# RDS Configuration
# -----------------------------------------------------------------------------

# Start with db.t3.medium, upgrade to db.r5.large when needed
db_instance_class        = "db.t3.medium"
db_allocated_storage     = 100
db_name                  = "hz_navigator"
db_username              = "hz_navigator_admin"
db_multi_az              = true
db_backup_retention_period = 7
db_create_read_replica   = true
db_replica_instance_class = "db.t3.medium"

# -----------------------------------------------------------------------------
# ECS Configuration
# -----------------------------------------------------------------------------

# 2 vCPU, 4GB RAM as specified
ecs_task_cpu    = 2048
ecs_task_memory = 4096
ecs_min_capacity = 2
ecs_max_capacity = 10

# Update this with your ECR repository image
container_image = "123456789012.dkr.ecr.us-east-1.amazonaws.com/hz-navigator-backend:latest"

# -----------------------------------------------------------------------------
# ElastiCache (Redis) Configuration
# -----------------------------------------------------------------------------

redis_node_type           = "cache.r5.large"
redis_num_cache_nodes     = 2
redis_parameter_group_family = "redis7"

# -----------------------------------------------------------------------------
# S3 Configuration
# -----------------------------------------------------------------------------

documents_bucket_name = "hz-navigator-documents"
frontend_bucket_name  = "hz-navigator-frontend"

